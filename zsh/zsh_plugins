# antidote plugins

# The next 3 plugins come from the same repo: https://github.com/belak/zsh-utils

# zsh history
belak/zsh-utils path:history

# configure and run compinit to initialize completions
# all plugins which offer or affect completions should be loaded before this
belak/zsh-utils path:completion

# cross-platform helpers and colorizing aliases
belak/zsh-utils path:utility

# prompt
sindresorhus/pure     kind:fpath
